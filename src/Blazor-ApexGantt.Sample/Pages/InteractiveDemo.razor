@page "/interactive-demo"
@using Blazor_ApexGantt.Components
@using Blazor_ApexGantt.Models

<PageTitle>Interactive Demo</PageTitle>

<h1>ApexGantt Interactive Demo</h1>
<p>Showcasing interactive features and user controls</p>

<div class="mb-4">
    <h3>Fully Interactive Gantt Chart</h3>
    <p class="text-muted">Try dragging tasks, resizing them, and using the toolbar controls!</p>
    <ApexGantt Options="@interactiveOptions" Tasks="@tasks" />
</div>

@code {
    private GanttOptions interactiveOptions = new()
    {
        Width = "100%",
        Height = "600px",
        ViewMode = "week",

        // Interactivity Options - All Enabled
        EnableToolbar = true,
        EnableTaskDrag = true,
        EnableTaskEdit = true,
        EnableTaskResize = true,
        EnableExport = true,
        EnableResize = true,

        // Styling for better UX
        BarBorderRadius = 6,
        RowHeight = 35,
        BarBackgroundColor = "#3b82f6"
    };

    private List<GanttTask> tasks = new()
    {
        new GanttTask
        {
            Id = "project-kickoff",
